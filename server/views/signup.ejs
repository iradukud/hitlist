<%- include('partials/header') -%>

<body class="is-preload">
  <%# Page Wrapper %>
  <div id="page-wrapper">

    <%# Header %>
    <header id="header" class="alt">
      <h1><a href="/welcome">
          <h1>Hitlist</h1>
        </a></h1>
      <%# link back to homepage/welcome page  %>
      <nav>
        <a href="#menu">Menu</a>
      </nav>
    </header>

    <%# Menu %>
    <nav id="menu">
      <div class="inner">
        <h2>Menu</h2>
        <ul class="links">
          <li><a href="/">Back</a></li>
          <li><a href="/login">Login</a></li>
        </ul>
        <a href="#" class="close">Close</a>
      </div>
    </nav>

    <%# Signup section %>
    <section id="footer">
      <div class="inner">
        <h2 class="major">Signup</h2>

        <% if (locals.messages.errors) { 
         messages.errors.forEach( el=> { %>
        <div class="alert alert-danger">
          <%= el.msg %>
        </div>

        <% })} %>
        <!-- Signup form -->
        <form action="/signup" method="POST">
          <div class="fields">
            <div class="field">
              <label for="userName">User Name</label>
              <input type="text" name="userName" placeholder="User Name" />
            </div>
            <div class="field">
              <label for="email">Email</label>
              <input type="email" name="email" placeholder="test@test.com">
            </div>
            <div class="field">
              <label for="password">Password</label>
              <input type="password" name="password" placeholder="xxxxxxx">
            </div>
            <div class="field">
              <label for="confirmPassword">Confirm Password</label>
              <input type="password" name="confirmPassword" placeholder="xxxxxxx">
            </div>
          </div>
          <ul class="actions">
            <li><input type="submit" /></li>
          </ul>
        </form>
      </div>

      <%# Footer %>
      <div class="inner">
        <ul class="copyright">
          <li>All rights reserved.</a></li>
          <li>&copy; <a href="https://daviradprofile.netlify.app">DavidIradukunda</a></li>
        </ul>
      </div>
    </section>

  </div>

  <%# load basic site scripts %>
  <%- include('partials/scripts') -%>

  <%# load footer partial %>
  <%- include('partials/footer') -%>